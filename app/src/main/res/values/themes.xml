<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Compose -->
    <style name="Theme.ZenApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Status bar color -->
        <item name="android:statusBarColor">#121212</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">#121212</item>
        <!-- Background -->
        <item name="android:colorBackground">#121212</item>
    </style>

    <!-- Theme for other activities if needed -->
    <style name="Theme.ZenApp.NoActionBar" parent="Theme.ZenApp">
        <item name="android:statusBarColor">#121212</item>
    </style>
</resources>

