<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Compose -->
    <style name="Theme.ZenApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Background colors -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#E1E1E1</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">#121212</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">#121212</item>
    </style>

    <!-- Theme for AppSelectionActivity -->
    <style name="Theme.ZenApp.NoActionBar" parent="Theme.ZenApp">
        <item name="android:statusBarColor">#121212</item>
    </style>
</resources>

